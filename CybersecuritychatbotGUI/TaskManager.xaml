<Window x:Class="CyberSecurityTaskAssistant.TaskManager"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cybersecurity Task Assistant" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="#1B263B">
    <!-- Deep navy background -->

    <Grid Margin="20">
        <Border Background="White" CornerRadius="12" Padding="20"
                BorderBrush="#3E5C76" BorderThickness="1">
            <StackPanel>

                <!-- Task Title -->
                <TextBlock Text="Task Title:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#3E5C76"/>
                <TextBox Name="TitleBox"
                         Margin="0,0,0,15"
                         Background="#F0F4F8"
                         BorderBrush="#BCCCDC"
                         Foreground="#1B263B"
                         Padding="6"
                         FontSize="14"/>

                <!-- Task Description -->
                <TextBlock Text="Task Description:"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#3E5C76"/>
                <TextBox Name="DescriptionBox"
                         Margin="0,0,0,15"
                         Background="#F0F4F8"
                         BorderBrush="#BCCCDC"
                         Foreground="#1B263B"
                         Padding="6"
                         FontSize="14"/>

                <!-- Reminder -->
                <TextBlock Text="Reminder (optional):"
                           FontSize="14"
                           FontWeight="SemiBold"
                           Foreground="#3E5C76"/>
                <DatePicker Name="ReminderDatePicker"
                            Margin="0,0,0,20"
                            Background="#F0F4F8"
                            BorderBrush="#BCCCDC"
                            Foreground="#1B263B"/>

                <!-- Add Task Button -->
                <Button Content="Add Task"
                        Click="AddTask_Click"
                        Width="100"
                        Height="35"
                        HorizontalAlignment="Left"
                        Margin="0,0,0,20"
                        Background="#3E8EDE"
                        Foreground="White"
                        FontWeight="Bold"
                        BorderBrush="#2C699A"
                        Cursor="Hand"/>

                <!-- Task List -->
                <ListBox Name="TaskList"
                         Height="200"
                         Margin="0,0,0,20"
                         Background="#F8F9FA"
                         BorderBrush="#BCCCDC"
                         Foreground="#1B263B"
                         FontSize="14"/>

                <!-- Action Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Content="Mark Completed"
                            Click="MarkCompleted_Click"
                            Width="130"
                            Height="35"
                            Margin="5"
                            Background="#27AE60"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderBrush="#1E8449"
                            Cursor="Hand"/>

                    <Button Content="Delete Task"
                            Click="DeleteTask_Click"
                            Width="110"
                            Height="35"
                            Margin="5"
                            Background="#E74C3C"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderBrush="#C0392B"
                            Cursor="Hand"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>
